# Netlify Headers Configuration - FIXED VERSION

# Security headers for all pages
/*
  X-Frame-Options: DENY
  X-Content-Type-Options: nosniff
  X-XSS-Protection: 1; mode=block
  Referrer-Policy: strict-origin-when-cross-origin
  Permissions-Policy: geolocation=(), microphone=(), camera=()

# HTML FILES - NEVER CACHE
/*.html
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

# Learning hub - extra aggressive
/learning-hub*.html
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

# Module pages - extra aggressive
/*-module*.html
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

# JAVASCRIPT - SHORT CACHE (5 minutes)
/*.js
  Cache-Control: public, max-age=300, must-revalidate

# CSS - SHORT CACHE (5 minutes)
/*.css
  Cache-Control: public, max-age=300, must-revalidate

# JSON - SHORT CACHE
/*.json
  Cache-Control: public, max-age=300, must-revalidate

# IMAGES - MODERATE CACHE (1 day)
/*.jpg
  Cache-Control: public, max-age=86400

/*.jpeg
  Cache-Control: public, max-age=86400

/*.png
  Cache-Control: public, max-age=86400

/*.gif
  Cache-Control: public, max-age=86400

/*.svg
  Cache-Control: public, max-age=86400

/*.webp
  Cache-Control: public, max-age=86400

/*.ico
  Cache-Control: public, max-age=86400

# FONTS - LONG CACHE (1 year)
/*.woff
  Cache-Control: public, max-age=31536000, immutable

/*.woff2
  Cache-Control: public, max-age=31536000, immutable

/*.ttf
  Cache-Control: public, max-age=31536000, immutable

# SPECIAL FILES - NEVER CACHE
/sw.js
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

/cache-buster.js
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

/manifest.json
  Cache-Control: public, max-age=300, must-revalidate
