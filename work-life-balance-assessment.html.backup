    <script>
        const form = document.getElementById('balanceForm');
        const totalQuestions = 20;
        let answeredQuestions = 0;

        // Track progress
        const radios = form.querySelectorAll('input[type="radio"]');
        radios.forEach(radio => {
            radio.addEventListener('change', updateProgress);
        });

        function updateProgress() {
            answeredQuestions = 0;
            for (let i = 1; i <= totalQuestions; i++) {
                if (form[`q${i}`].value) {
                    answeredQuestions++;
                }
            }
            document.getElementById('progressText').textContent = `${answeredQuestions}/${totalQuestions}`;
            document.getElementById('progressBar').style.width = `${(answeredQuestions/totalQuestions)*100}%`;
        }

        // Form submission
        form.addEventListener('submit', function(e) {
            e.preventDefault();
            
            // Validate all questions answered
            if (answeredQuestions < totalQuestions) {
                document.getElementById('validationMsg').style.display = 'block';
                return;
            }
            
            showResults();
        });

        function showResults() {
            // Hide form, show results
            document.getElementById('assessmentForm').style.display = 'none';
            document.getElementById('results').classList.add('active');
            
            // Calculate total and section scores
            let total = 0;
            const sectionRanges = [[1,4], [5,8], [9,12], [13,16], [17,20]];
            const sectionNames = ['Energy Management', 'Boundary Setting', 'Recovery Practices', 'Life Integration', 'Sustainable Performance'];
            const sectionScores = [];
            
            for (let s = 0; s < sectionRanges.length; s++) {
                let sectionTotal = 0;
                for (let q = sectionRanges[s][0]; q <= sectionRanges[s][1]; q++) {
                    const val = parseInt(form[`q${q}`].value, 10);
                    sectionTotal += val;
                    total += val;
                }
                sectionScores.push(sectionTotal);
            }
            
            // Display total score
            document.getElementById('totalScore').textContent = total;
            
            // Category
            let cat = '';
            if (total >= 85) cat = 'Exceptional Balance';
            else if (total >= 70) cat = 'Sustainable Performer';
            else if (total >= 55) cat = 'Moderate Balance';
            else if (total >= 40) cat = 'Needs Attention';
            else cat = 'Critical: Take Action';
            document.getElementById('totalCategory').textContent = cat;
            
            // Section scores
            const sectionScoresDiv = document.getElementById('sectionScores');
            sectionScoresDiv.innerHTML = '';
            for (let s = 0; s < sectionScores.length; s++) {
                let interp = '';
                const score = sectionScores[s];
                if (score >= 17) interp = 'Strong';
                else if (score >= 14) interp = 'Good';
                else if (score >= 11) interp = 'Moderate';
                else if (score >= 8) interp = 'Needs Improvement';
                else interp = 'Critical';
                sectionScoresDiv.innerHTML += `<div class="section-score"><h4>${sectionNames[s]}</h4><div class="score">${score}/20</div><div class="interpretation">${interp}</div></div>`;
            }
            
            // Recommendations
            const recDiv = document.getElementById('recommendations');
            let recHtml = '';
            if (total >= 85) {
                recHtml = `<h4>Exceptional Balance - Keep It Up!</h4><p>You have excellent work-life balance. Continue maintaining your healthy boundaries and recovery practices. Share your strategies with others who might benefit.</p>`;
            } else if (total >= 70) {
                recHtml = `<h4>Sustainable Performance</h4><p>You have a strong foundation. Review your lower-scoring areas and make incremental improvements to optimize your balance further.</p>`;
            } else if (total >= 55) {
                recHtml = `<h4>Moderate Balance - Room for Growth</h4><p>Some areas need attention. Focus on the dimensions where you scored lowest. Small changes in boundary-setting or recovery practices can make a big difference.</p>`;
            } else if (total >= 40) {
                recHtml = `<h4>Needs Attention</h4><p>Your work-life balance is suffering. This is unsustainable. Prioritize recovery, set clearer boundaries, and seek support to prevent burnout.</p>`;
            } else {
                recHtml = `<h4>Critical: Take Immediate Action</h4><p>You're at high risk of burnout. This requires urgent attention. Consider speaking with a coach, therapist, or trusted advisor to create a recovery plan.</p>`;
            }
            recDiv.innerHTML = recHtml;
            
            // Scroll to top
            window.scrollTo(0, 0);
        }
    </script>
